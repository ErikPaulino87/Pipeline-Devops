{
  "openapi": "3.0.0",
  "info": {
    "title": "Pipeline DevOps API",
    "version": "1.0.0",
    "description": "Documentação mínima para Swagger UI"
  },
  "servers": [
    { "url": "/" }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Home",
        "responses": { "200": { "description": "OK" } }
      }
    },
    "/items": {
      "get": {
        "summary": "Lista itens",
        "responses": {
          "200": { "description": "OK", "content": { "application/json": {} } }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login - gerar token",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token gerado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "access_token": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/protected": {
      "get": {
        "summary": "Rota protegida",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Acesso permitido" },
          "401": { "description": "Não autorizado" },
          "422": { "description": "Header Authorization mal formatado" }
        }
      }
    }
  }
}
